{% extends 'base.html.twig' %}

{% block title %}Coopaines
{% endblock %}

{% block actions %}
{% include 'fragments/events-menu.html.twig' %}
{% endblock actions %}

{%
block panel__main %}
	{# Main top #}
	<div class="bg-bluesky-950 sticky top-0 pt-4 z-10">
		<div class="flex justify-between border border-bluesky-900 p-4 rounded-t-md">
			<div class="flex gap-2 items-center">
				<div>←</div>
				<a href="{{ path('app_app') }}" class="block">retour à l'accueil</a>
			</div>
		</div>
	</div>

	{# Main content #}
	<div class="border-x border-bluesky-900">
		{% for i in 0..20 %}
			{# Evenement #}
			<twig:FeedPost type="2" hasMeta="{{ false }}"></twig:FeedPost>
		{% endfor %}
	</div>

{% endblock %}

{% block panel__two %}
	<div
		class="flex flex-col">

		{# Calendrier #}
		<twig:Calendar><</twig:Calendar>

		<div class="w-full h-px my-2 bg-bluesky-800"></div>

		{# Trier par catégories #}
		<div class="flex flex-col gap-4 p-4">
			<div class="flex gap-2 text-sm uppercase tracking-wider font-bold">
				<twig:ux:icon name="mdi:filter" class="h-5"/>
				<div>Filtrer</div>
			</div>
			<div class="flex flex-col gap-2">
				<div class="flex items-center gap-3"><input type="checkbox" class="checkbox checkbox-sm"/>Concerts</div>
				<div class="flex items-center gap-3"><input type="checkbox" class="checkbox checkbox-sm"/>Conférences</div>
				<div class="flex items-center gap-3"><input type="checkbox" class="checkbox checkbox-sm"/>Ateliers</div>
				<div class="flex items-center gap-3"><input type="checkbox" class="checkbox checkbox-sm"/>Projection</div>
				<div class="flex items-center gap-3"><input type="checkbox" class="checkbox checkbox-sm"/>Soirée de soutien</div>
				<div class="flex items-center gap-3"><input type="checkbox" class="checkbox checkbox-sm"/>Mobilisation</div>
			</div>
		</div>
	</div>

{% endblock %}
